        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/btn_layout">

            <Button
                android:id="@+id/krp_2_5_2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
