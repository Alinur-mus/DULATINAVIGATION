<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

            <TextView
                android:id="@+id/tehn_korpus"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="2.Технологический корпус"
                android:textSize="25dp"
                android:onClick="myFancyMethod"/>


    <WebView
        android:layout_below="@id/tehn_korpus"
        android:id="@+id/webview"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <LinearLayout
        android:id="@+id/firstRoat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/webview"
        android:orientation="horizontal">
        <Button
            android:id="@+id/tk_2_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="2.1"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/tk_2_2"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="2.2"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout

        android:id="@+id/secondRoat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/firstRoat"
        android:orientation="horizontal">
        <Button
            android:id="@+id/tk_2_3"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="2.3"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/tk_2_4"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="2.4"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/secondRoat"
        android:orientation="horizontal">
        <Button
            android:id="@+id/tk_2_5"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="2.5"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/tk_2_6"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="2.6"
            android:layout_weight="1"/>
    </LinearLayout>


</RelativeLayout>